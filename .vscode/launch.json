    "version": "0.2.0",
    "configurations": [
        {
            "name": "FastAPI: Uvicorn Debug",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "main:app",
                "--reload",
                "--host",
                "0.0.0.0",
                "--port",
                "8000",
                "--log-level",
                "debug"
            ],
            "jinja": true,
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/services/backend"
            },
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/services/backend"
        }
    ]
}